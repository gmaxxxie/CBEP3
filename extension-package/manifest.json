{
  "manifest_version": 3,
  "name": "跨境电商地域适配分析器",
  "name_en": "Cross-Border E-commerce Localization Analyzer",
  "version": "1.1.0",
  "description": "智能分析跨境电商网页内容的地域适配性，提供语言、文化、合规和用户体验优化建议",
  "description_en": "Intelligently analyze cross-border e-commerce content for regional adaptation with language, cultural, compliance and UX optimization",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "sidePanel"
  ],
  
  "host_permissions": [
    "https://*/*",
    "http://localhost/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content-script.js"],
      "css": ["src/content/content-styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_title": "地域适配分析器",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  
  "options_page": "options/options.html",
  
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/*",
        "src/data/region-data.json",
        "src/data/rule-configs.json",
        "src/services/ai-service.js",
        "src/utils/analysis-cache.js",
        "src/utils/report-generator.js",
        "src/rules/rule-engine.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}